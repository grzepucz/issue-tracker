{
  "name": "issue-tracker-backend",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "server": "node ./dist-server/bin/www",
    "transpile": "babel ./src --out-dir dist-server",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "watch:dev": "nodemon",
    "dev": "DATABASE_URL=mongodb://localhost/issue-tracker NODE_ENV=development npm-run-all build server",
    "prod": "DATABASE_URL=mongodb://url.to.db.host/issue-tracker NODE_ENV=production npm-run-all build server"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "babel-polyfill": "^6.26.0",
    "express": "~4.16.1",
    "mongoose": "^5.9.4",
    "morgan": "~1.9.1",
    "rimraf": "^3.0.2",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
